<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/top_text_default"
    android:orientation="vertical">

    <View
        android:id="@+id/top_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/divider_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_community"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tv_communityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_community"
        android:text="彩科大厦"
        android:textColor="@color/color_333b46"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="加入"
        android:textColor="@color/color_7caff5"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_provincename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_communityname"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_join"
        android:text="广东省深圳市宝安区"
        android:maxLines="1"
        android:textColor="@color/color_a3aaae"
        android:textSize="14sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color" />


</RelativeLayout>