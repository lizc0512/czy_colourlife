<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/top_bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/czy_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/user_top_view_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/new_return_back" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/icon_mouse"
            android:visibility="gone" />

        <TextView
            android:id="@+id/user_top_view_tvback"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@drawable/top_text_select"
            android:textSize="15dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:src="@drawable/ivclose"
            android:visibility="gone" />

        <TextView
            android:id="@+id/user_top_view_back_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@drawable/top_text_select"
            android:textSize="16dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/user_top_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:maxEms="10"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black_text_color"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_home_arrow"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_top_view_right"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@drawable/top_text_select"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:padding="13dp"
            android:src="@drawable/img_home_more"
            android:visibility="gone" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/line_color" />
    </FrameLayout>


</LinearLayout>