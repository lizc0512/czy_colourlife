<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <TextView
            android:id="@+id/tv_carNumber"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="13dp"
            android:text="粤A 00000"
            android:textSize="18dp"
            android:lines="1"
            android:textColor="@color/blue_text_color"/>
        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="李四四"
            android:textSize="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignBaseline="@id/tv_carNumber"
            android:layout_toRightOf="@id/tv_carNumber"
            android:layout_marginLeft="70dp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_userPhone"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="13611006502"
            android:textSize="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_alignBaseline="@id/tv_carNumber"
            android:textColor="@color/gray"/>
        <View
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="@color/bg_color"/>
        <TextView
            android:id="@+id/tv_mycar_bindfp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定我的尊享饭票"
            android:textSize="14dp"
            android:layout_below="@id/tv_line"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black_text_color"/>
        <ImageView
            android:id="@+id/iv_mycar_bindfp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_line"
            android:src="@drawable/arrow_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_color"/>
    </RelativeLayout>

</LinearLayout>
