<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/bg_color">
    <ImageView
        android:id="@+id/ib_localfp_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/loaclfp_selector"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/vipfp3x"/>
        <TextView
            android:id="@+id/tv_vipfp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尊享饭票"
            android:textColor="@color/vipfp_text"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp"/>
        <TextView
            android:id="@+id/tv_localfp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小区名字"
            android:textColor="@color/vipfp_text"
            android:textSize="10dp"
            android:layout_toRightOf="@id/tv_vipfp_1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/vipfp_text"
            android:textSize="10dp"
            android:layout_marginTop="17dp"
            android:layout_below="@id/tv_vipfp_1"
            android:layout_marginLeft="38dp"
            android:text="余额"/>
        <TextView
            android:id="@+id/tv_localfp_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/vipfp_text"
            android:textSize="24dp"
            android:layout_below="@id/tv_vipfp_1"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="7dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>
