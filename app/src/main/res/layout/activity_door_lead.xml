<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请权限流程"
        android:textSize="16dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_333b46"/>
    <TextView
        android:id="@+id/tv_doorlead_requestright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请权限:"
        android:textSize="14dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_333b46"/>
    <RelativeLayout
        android:id="@+id/rl_doorlead1"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv_doorlead_requestright">
        <ImageView
            android:id="@+id/iv_doorlead1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/open_icon_1"/>
        <TextView
            android:id="@+id/tv_doorlead1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写授权人手机号码"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_doorlead1"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_333b46"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_doorlead2"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/rl_doorlead1">
        <ImageView
            android:id="@+id/iv_doorlead2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/open_icon_2"/>
        <TextView
            android:id="@+id/tv_doorlead2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写备注信息"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_doorlead2"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_333b46"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_doorlead3"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/rl_doorlead2">
        <ImageView
            android:id="@+id/iv_doorlead3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/open_icon_3"/>
        <TextView
            android:id="@+id/tv_doorlead3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交申请"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_doorlead3"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_333b46"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_doorlead4"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/rl_doorlead3">
        <ImageView
            android:id="@+id/iv_doorlead4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/open_icon_4"/>
        <TextView
            android:id="@+id/tv_doorlead4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待审核，审核通过后，可以开门"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_doorlead4"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_333b46"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_doorlead5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看申请状态"
        android:textSize="14dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/rl_doorlead4"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_626b77"/>
    <TextView
        android:id="@+id/tv_doorlead6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看申请时间及状态"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_doorlead5"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c999faa"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dee3e5" />
        <ImageView
            android:id="@+id/iv_doorlead_close"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:src="@drawable/open_icon_close" />
    </RelativeLayout>
</RelativeLayout>