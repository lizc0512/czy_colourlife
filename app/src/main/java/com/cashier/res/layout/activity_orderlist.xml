<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/czy_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/user_top_view_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="15dp"
            android:src="@drawable/icon_top_return" />

        <TextView
            android:id="@+id/user_top_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black_text_color"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/user_top_view_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_date_picker_arrow"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:textColor="@drawable/top_text_select"
            android:textSize="14sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/line_color" />
    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/orderlist_tablayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tabBackground="@color/white"
        app:tabTextAppearance="@style/TabLayoutTextSizeStyle" />

    <android.support.v4.view.ViewPager
        android:id="@+id/orderlist_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>