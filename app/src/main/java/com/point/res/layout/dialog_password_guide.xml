<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_password_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/point_password_guide" />

        <TextView
            android:id="@+id/tv_know"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_below="@id/iv_password_guide"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/about_corners4"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/color_25282e"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>