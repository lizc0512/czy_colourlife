<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_view" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
         android:orientation="horizontal">

        <com.BeeFramework.view.CircleImageView
            android:id="@+id/iv_transaction_logo"
            android:layout_width="24dp"
            android:layout_gravity="center_vertical"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/tv_transaction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            tools:text="饭票商城"
            android:textColor="@color/color_999999"
            android:textSize="15sp"  />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        tools:text="+60.50"
        android:textColor="@color/color_f24724"
        android:textSize="28sp"  />

    <TextView
        android:id="@+id/tv_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        tools:text="转账金额"
        android:textColor="@color/color_999999"
        android:textSize="14sp"  />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:text="消费类型"
        android:textColor="@color/color_999999"
        android:textSize="14sp"  />


    <TextView
        android:id="@+id/tv_transaction_type"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        tools:text="转账"
        android:textColor="@color/color_25282e"
        android:textSize="13sp"  />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:background="@color/line_color"
        android:layout_height="1px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:text="支付时间"
        android:textColor="@color/color_999999"
        android:textSize="14sp"  />


    <TextView
        android:id="@+id/tv_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        tools:text="2018-10-20 17:53:23"
        android:textColor="@color/color_25282e"
        android:textSize="13sp"  />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:background="@color/line_color"
        android:layout_height="1px"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:background="@color/line_color"
        android:layout_height="1px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:text="订单编号"
        android:textColor="@color/color_999999"
        android:textSize="14sp"  />


    <TextView
        android:id="@+id/tv_transaction_sn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        tools:text="2019212312123121231212345666"
        android:textColor="@color/color_25282e"
        android:textSize="13sp"  />


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:background="@color/line_color"
        android:layout_height="1px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:text="备注信息"
        android:textColor="@color/color_999999"
        android:textSize="14sp"  />


    <TextView
        android:id="@+id/tv_transaction_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        tools:text="梁思夏这是一个备注文案那么如果这是一个备注文案，当文 案内容超出一栏目的时候，自适应向下一列，默认不超过50 字内容"
        android:textColor="@color/color_25282e"
        android:textSize="13sp"  />

</LinearLayout>