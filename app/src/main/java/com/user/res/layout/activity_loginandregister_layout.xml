<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="20dp"
                android:text="登录注册"
                android:textColor="@color/color_25282e"
                android:textSize="28sp" />


            <com.BeeFramework.view.ClearEditText
                android:id="@+id/user_login_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="@null"
                android:hint="@string/user_input_phone"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/color_a3aaae"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:background="@color/line_color" />

                <ImageView
                    android:id="@+id/img_gesture_pwd"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/icon_signin_code" />

                <com.smileback.bankcommunicationsstyle.BCSIJMInputEditText
                    android:id="@+id/user_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/img_gesture_pwd"
                    android:background="@null"
                    android:hint="@string/user_input_pawd"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:textColor="@color/black_text_color"
                    android:textColorHint="@color/color_a3aaae"
                    android:textSize="16sp" />

            </RelativeLayout>


            <Button
                android:id="@+id/user_login_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/onekey_login_default_bg"
                android:text="@string/user_login"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_login_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/user_forget_pawd"
                android:textColor="@color/color_b5b5b5"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="@string/user_quick_login"
                android:textColor="@color/color_a3aaae"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/thridLoginlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/wechat_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="56dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/new_icon_wechat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="微信"
                        android:textColor="@color/color_646566"
                        android:textSize="11sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/qq_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/new_icon_qq" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="QQ"
                        android:textColor="@color/color_646566"
                        android:textSize="11sp" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_contact_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp"
                android:text="联系客服?"
                android:textColor="@color/color_b5b5b5"
                android:textSize="12sp"  />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
