<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/icon_czy_logo" />


            <com.BeeFramework.view.ClearEditText
                android:id="@+id/user_login_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="@string/user_input_phone"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:textColor="@color/black_text_color"
                android:textColorHint="@color/color_a3aaae"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:background="@color/line_color" />

                <ImageView
                    android:id="@+id/img_gesture_pwd"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/icon_signin_code" />

                <com.smileback.bankcommunicationsstyle.BCSIJMInputEditText
                    android:id="@+id/user_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/img_gesture_pwd"
                    android:background="@null"
                    android:hint="@string/user_input_pawd"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:textColor="@color/black_text_color"
                    android:textColorHint="@color/color_a3aaae"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/user_login_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="@string/user_forget_pawd"
                android:textColor="@color/tv_blue_bg"
                android:textSize="14sp" />

            <Button
                android:id="@+id/user_login_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rect_round_gray"
                android:text="@string/user_login"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/quickLoginLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <View
                    android:layout_width="75dp"
                    android:layout_height="0.6dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_bfc7cc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="23dp"
                    android:paddingRight="23dp"
                    android:text="@string/user_quick_login"
                    android:textColor="@color/color_a3aaae"
                    android:textSize="13sp" />

                <View
                    android:layout_width="75dp"
                    android:layout_height="0.6dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_bfc7cc" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thridLoginlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_wechat_login"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_wechat" />

                <ImageView
                    android:id="@+id/img_qq_login"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="54dp"
                    android:src="@drawable/icon_shareqq" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
