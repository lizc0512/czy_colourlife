<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/top_view" />

    <ScrollView
        android:id="@+id/scroview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_myfeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="我的反馈:"
                    android:textColor="#7c868d"
                    android:textSize="15dp" />

                <LinearLayout
                    android:background="@color/bg_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="7dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/black_text_color"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#bfc7cc"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_type"
                            android:layout_marginTop="6dp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="#7c868d"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <com.feed.view.NoScrollGridView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@color/white"
                        android:id="@+id/feed_image_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="#00000000"
                        android:numColumns="3"
                        android:gravity="center"
                        android:visibility="gone"
                        android:overScrollMode="never"
                        android:scrollbars="none">
                    </com.feed.view.NoScrollGridView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="客服回复:"
                    android:textColor="#7c868d"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:id="@+id/rl_cotent"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="7dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_type_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/black_text_color"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_time_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="#bfc7cc"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_content_back"
                        android:layout_width="match_parent"
                        android:minLines="5"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_type_back"
                        android:layout_marginTop="6dp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#7c868d"
                        android:textSize="15dp" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_norespose"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_color"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="visible"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:lines="6"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp"
                        android:text="暂无回复"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
