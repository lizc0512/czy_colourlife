<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    tools:context="com.mycarinfo.activity.AddCarActivity">

    <include
        android:id="@+id/top_titles"
        layout="@layout/top_view" />

    <ScrollView
        android:id="@+id/sl_addcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/top_titles"
        android:background="@drawable/bg_default"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/bg_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/car_owner_infor"
                    android:textColor="@color/gray"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_addcar_name"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_default"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/car_owner_name"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_addcar_familyname"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="@string/car_real_name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/linea"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_addcar_phone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_default"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/property_phone"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_addcar_phone"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="@string/property_input_phone"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_addcar_idphoto"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/bg_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/property_idcard_front"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/iv_addcar_idfront"
                        android:layout_width="139dp"
                        android:layout_height="92dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/kuang3x" />

                    <ImageView
                        android:id="@+id/iv_addcar_idfront2"
                        android:layout_width="139dp"
                        android:layout_height="92dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="35dp"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sfz3x" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="70dp"
                        android:src="@drawable/ps3x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="105dp"
                        android:text="@string/property_id_frontpic"
                        android:textColor="@color/black_text_color"
                        android:textSize="10dp" />

                    <ImageView
                        android:id="@+id/iv_addcar_idback"
                        android:layout_width="139dp"
                        android:layout_height="92dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="31dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/kuang3x" />

                    <ImageView
                        android:id="@+id/iv_addcar_idback2"
                        android:layout_width="139dp"
                        android:layout_height="92dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="31dp"
                        android:layout_marginTop="35dp"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sfzback3x2" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="70dp"
                        android:src="@drawable/ps3x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="105dp"
                        android:text="@string/property_id_backpic"
                        android:textColor="@color/black_text_color"
                        android:textSize="10dp" />

                </RelativeLayout>

                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/bg_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/car_infor"
                    android:textColor="@color/gray"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_addcar_carnumber"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_default"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/car_number"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp" />

                    <RelativeLayout
                        android:id="@+id/rl_addcar_carNum"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_addcar_pai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="粤"
                            android:textColor="@color/black_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_addcar_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@id/tv_addcar_pai"
                            android:text="A"
                            android:textColor="@color/black_text_color"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/tv_addcar_a"
                            android:paddingLeft="5dp"
                            android:src="@drawable/f1arrowdown3x" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/et_addcar_carnumber"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="@string/car_input_number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_addcar_model"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_default"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/car_model"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_addcar_brand"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:ellipsize="end"
                        android:gravity="center|right"
                        android:lines="1"
                        android:text="@string/car_choice_model"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_addcar_model"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="90dp"
                        android:text="英朗"
                        android:textColor="@color/black_text_color"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_addcar_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dp"
                        android:text="("
                        android:textColor="@color/black_text_color"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_addcar_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="63dp"
                        android:text="银"
                        android:textColor="@color/black_text_color"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_addcar_color2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="54dp"
                        android:text=")"
                        android:textColor="@color/black_text_color"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_addcar_vehicle_code"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_default"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/car_vehicle_number"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_addcar_vehicle_code"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="@string/car_input_vehiclenumber"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_addcar_engine_code"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_default"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/car_engine_number"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_addcar_engine_code"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="@string/car_input_engine"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_addcar_driver"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/bg_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/car_take_vechical"
                        android:textColor="@color/black_text_color"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/iv_addcar_driverfront"
                        android:layout_width="139dp"
                        android:layout_height="92dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/kuang3x" />

                    <ImageView
                        android:id="@+id/iv_addcar_driverfront2"
                        android:layout_width="139dp"
                        android:layout_height="92dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="35dp"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/xszz3x" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="70dp"
                        android:src="@drawable/ps3x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="105dp"
                        android:text="@string/car_vechical_frontpic"
                        android:textColor="@color/black_text_color"
                        android:textSize="10dp" />

                    <ImageView
                        android:id="@+id/iv_addcar_driverback"
                        android:layout_width="139dp"
                        android:layout_height="92dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="31dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/kuang3x" />

                    <ImageView
                        android:id="@+id/iv_addcar_driverback2"
                        android:layout_width="139dp"
                        android:layout_height="92dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="31dp"
                        android:layout_marginTop="35dp"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/xszf3x" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="70dp"
                        android:src="@drawable/ps3x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="105dp"
                        android:text="@string/car_vechical_backpic"
                        android:textColor="@color/black_text_color"
                        android:textSize="10dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/bg_color"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/property_protect"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/bg_color">

                    <Button
                        android:id="@+id/btn_addcar_commit"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rect_round_blue"
                        android:text="@string/property_sumit"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_addcar_pai"
                android:layout_width="100dp"
                android:layout_height="500dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:visibility="gone">

                <com.mycarinfo.activity.MyListView
                    android:id="@+id/lv_addcar_pai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#e6e9ea"
                    android:dividerHeight="0.5dp" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
