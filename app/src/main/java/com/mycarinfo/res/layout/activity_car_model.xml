<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_model"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.mycarinfo.activity.CarModelActivity">

    <include
        android:id="@+id/top_titles"
        layout="@layout/top_view" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvs"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/car_hot_model"
                android:visibility="gone"
                android:textColor="@color/gray"
                android:textSize="12dp" />
            <GridView
                android:id="@+id/gv_carmodel"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:numColumns="5"
                android:visibility="visible"
                android:background="@color/white"
                android:layout_below="@id/tvs"
                android:stretchMode="columnWidth"></GridView>
            <ListView
                android:id="@+id/lv_carmodel"
                android:layout_below="@id/gv_carmodel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@color/divider_color"
                android:dividerHeight="0.6dp"
                android:scrollbars="none">
            </ListView>
            <com.im.view.SideBar
                android:id="@+id/addcar_side_bar"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"/>
            <LinearLayout
                android:id="@+id/ll_addcar_carmodel"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:visibility="gone">
                <com.mycarinfo.activity.MyListView
                    android:id="@+id/lv_carmodel_carmodel"
                    android:layout_width="match_parent"
                    android:divider="@null"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_carmodel_carcolour"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:visibility="gone">
                <com.mycarinfo.activity.MyListView
                    android:id="@+id/lv_carmodel_carcolour"
                    android:layout_width="match_parent"
                    android:divider="@null"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </FrameLayout>
</LinearLayout>
