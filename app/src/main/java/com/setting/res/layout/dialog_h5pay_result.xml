<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/about_corners4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="请确认微信支付是否完成"
            android:textColor="@color/color_333b46"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bfc7cc" />

        <TextView
            android:id="@+id/tv_finish_pay"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="已完成支付"
            android:textColor="@color/textcolor_27a2f0"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bfc7cc" />


        <TextView
            android:id="@+id/tv_again_pay"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="支付遇到问题,重新支付"
            android:textColor="@color/color_a3aaae"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bfc7cc" />

        <TextView
            android:id="@+id/tv_jump_alipay"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:gravity="center"
            android:text="支付遇到问题,无法输入支付密码\n 点击前往支付宝账单进行支付"
            android:textColor="@color/color_a3aaae"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bfc7cc" />


        <TextView
            android:id="@+id/tv_cancel_pay"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="取消支付"
            android:textColor="@color/color_a3aaae"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>