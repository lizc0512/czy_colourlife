<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_view"/>

    <RelativeLayout
        android:id="@+id/ll_gesture_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="6dp"
        android:layout_marginTop="10dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tv_gesture_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_gesture"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/icon_gesture"
            android:gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingStart="10dp"
            android:text="@string/gesture_pwd"
            android:textColor="@color/black_text_color"
            android:textSize="16dp"/>

        <com.setting.switchButton.SwitchButton
            android:id="@+id/switch_gesture"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_change_gesture_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--手势密码-->
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_change_gesture_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableEnd="@drawable/arrow_right"
            android:drawableLeft="@drawable/icon_change_gesture_pwd"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_right"
            android:drawableStart="@drawable/icon_change_gesture_pwd"
            android:gravity="center_vertical"
            android:paddingBottom="6dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:text="@string/change_pay_pwd"
            android:textColor="@color/black_text_color"
            android:textSize="16dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_forget_gesture_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_forget_gesture_pwd"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableEnd="@drawable/arrow_right"
            android:drawableLeft="@drawable/icon_forget_gesture_pwd"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_right"
            android:drawableStart="@drawable/icon_forget_gesture_pwd"
            android:gravity="center_vertical"
            android:paddingBottom="6dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:text="@string/forget_gesture_pwd"
            android:textColor="@color/black_text_color"
            android:textSize="16dp"/>

    </LinearLayout>
</LinearLayout>