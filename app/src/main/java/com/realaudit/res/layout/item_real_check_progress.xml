<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/iv_check_status"
        android:layout_width="wrap_content"
        android:src="@drawable/real_check_progress"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="1dp"
        android:background="@color/color_108ee9"
        android:layout_marginLeft="9dp"
        android:layout_below="@id/iv_check_status"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/iv_check_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:text="@string/real_contact_service"
        android:textColor="@color/color_333333"
        android:textSize="17sp"  />

    <TextView
        android:id="@+id/iv_check_time"
        android:layout_below="@id/iv_check_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        tools:text="2019-11-09 19:00"
        android:textColor="@color/color_999999"
        android:textSize="14sp"  />
</RelativeLayout>