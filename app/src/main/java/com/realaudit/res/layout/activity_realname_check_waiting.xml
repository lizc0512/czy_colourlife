<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/top_view" />

    <ImageView
        android:id="@+id/iv_check_result"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/real_check_wait"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/real_status_wait"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/color_25282e"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/real_check_wait"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="80dp">


        <ImageView
            android:id="@+id/iv_check_status"
            android:layout_width="wrap_content"
            android:src="@drawable/real_check_progress"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="1dp"
            android:background="@color/color_108ee9"
            android:layout_marginLeft="9dp"
            android:layout_below="@id/iv_check_status"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/iv_check_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="@string/real_start_check"
            android:textColor="@color/color_333333"
            android:textSize="17sp"  />

        <TextView
            android:id="@+id/tv_check_time"
            android:layout_below="@id/iv_check_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            tools:text="2019-11-09 19:00"
            android:textColor="@color/color_999999"
            android:textSize="14sp"  />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_height="80dp">

        <View
            android:id="@+id/top_line"
            android:layout_width="1dp"
            android:background="@color/color_108ee9"
            android:layout_marginLeft="9dp"
            android:layout_height="5dp"/>


        <ImageView
            android:id="@+id/iv_check_waiting"
            android:layout_width="wrap_content"
            android:layout_below="@id/top_line"
            android:src="@drawable/check_waiting_sign"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="1dp"
            android:background="@color/color_eeeeee"
            android:layout_marginLeft="9dp"
            android:layout_below="@id/iv_check_waiting"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/iv_waiting_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="人工审核"
            android:textColor="@color/color_333333"
            android:textSize="17sp"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_waiting_desc"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="预计3天左右"
            android:textColor="@color/color_999999"
            android:textSize="14sp"  />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/result_line"
            android:layout_width="1dp"
            android:background="@color/color_eeeeee"
            android:layout_marginLeft="9dp"
            android:layout_height="5dp"/>
        <ImageView
            android:id="@+id/iv_check_success"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/result_line"
            android:src="@drawable/real_check_waiting"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="审核成功"
            android:textColor="@color/color_333333"
            android:textSize="17sp"  />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_contact_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:padding="5dp"
        android:text="@string/real_contact_service"
        android:textColor="@color/color_3282fa"
        android:textSize="14sp"  />

</LinearLayout>