<?xml version="1.0" encoding="utf-8"?>
<com.feed.view.FeedView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ExpandableTextTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feed_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:src="@color/blue_text_color_feed" />

        <LinearLayout
            android:id="@+id/feed_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="@color/blue_text_color_feed"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_guan"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/feed_bg_corners"
                    android:gravity="center"
                    android:text="官方"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/feed_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="发起了一个活动"
                    android:textColor="@color/gray_text_color"
                    android:textSize="15dp" />

            </LinearLayout>

            <com.feed.view.ExpandableTextTextView
                android:id="@+id/feed_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#ffffff"
                android:orientation="vertical"
                ExpandableTextTextView:animDuration="200"
                ExpandableTextTextView:collapseText="全文"
                ExpandableTextTextView:expandText="收起"
                ExpandableTextTextView:maxCollapsedLines="3">

                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/black_text_color"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:id="@id/expand_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@id/expand_collapse_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:textColor="@color/blue_text_color_feed"
                        android:textSize="12dp" />
                </RelativeLayout>
            </com.feed.view.ExpandableTextTextView>

            <include
                android:id="@+id/feed_image_grid"
                layout="@layout/feed_image_gridview" />

            <include
                android:id="@+id/feed_item_activity"
                layout="@layout/feed_item_activity" />

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/head_default" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="彩生活把社区服务做到家"
                    android:textColor="@color/black_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1个小时前"
                    android:textColor="@color/gray_text_color"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/feed_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="删除"
                    android:textColor="@color/blue_text_color_feed"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/feed_operate_btn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="right"
                        android:padding="8dp"
                        android:src="@drawable/icon_neighborhood_pj" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/feed_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/e2_comment_box"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/feed_like_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/feed_like_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/c0_like_number" />

                    <TextView
                        android:id="@+id/feed_like_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:includeFontPadding="true"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textColor="@color/blue_text_color_feed"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/feed_like_nameNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:includeFontPadding="true"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textColor="@color/blue_text_color_feed"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <!--<GridLayout-->
                <!--android:id="@+id/feed_like_gridlayout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="34dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:alignmentMode="alignMargins"-->
                <!--android:columnCount="4"-->
                <!--android:paddingLeft="10dp">-->
                <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:src="@drawable/c0_like_number"/>-->
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:text="李小姐,"-->
                <!--android:textSize="14dp"-->
                <!--android:textColor="@color/blue_text_color_feed"/>-->
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:text="李小姐"-->
                <!--android:textSize="14dp"-->
                <!--android:textColor="@color/blue_text_color_feed"/>-->
                <!--</GridLayout>-->

                <View
                    android:id="@+id/feed_comment_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <include
                    android:id="@+id/feed_reply_view"
                    layout="@layout/feed_reply_list"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.feed.view.FeedView>