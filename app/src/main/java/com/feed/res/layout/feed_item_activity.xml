<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/ring_round_activity"
    android:orientation="vertical"
    android:visibility="visible">

    <FrameLayout
        android:id="@+id/fl_feed_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/feed_item_activity_img"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
        <TextView
            android:id="@+id/feed_item_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="visible"
            android:layout_marginRight="12dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="16dp"
            android:text=" 查看更多活动＞"/>
    </FrameLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:gravity="center_vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/gray_text_color"
           android:text="时间"
           android:textSize="14dp"/>
        <TextView
            android:id="@+id/feed_item_activity_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_color"
            android:gravity="right"
            android:textSize="13dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="2015-12-28 18:35"/>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text_color"
            android:text="地点"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/feed_item_activity_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_color"
            android:gravity="right"
            android:textSize="14dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="茶馆"/>
    </LinearLayout>

</LinearLayout>
