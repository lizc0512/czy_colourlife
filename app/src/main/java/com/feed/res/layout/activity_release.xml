<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/czy_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/user_top_view_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/message_cancel"
            android:textColor="@color/top_bg_color"
            android:textSize="14dp"

            />

        <TextView
            android:id="@+id/user_top_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:singleLine="true"
            android:text="@string/feed_publish_activity"
            android:textColor="@color/top_bg_color"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/user_top_view_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/feed_publish"
            android:textColor="@color/top_bg_color"
            android:textSize="14dp" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/release_imageView_type"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/c2_activity" />

                    <TextView
                        android:id="@+id/referrer_textview_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/feed_activity_type"
                        android:textColor="#2BADFF"
                        android:textSize="13dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/release_select_activitytype"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/release_select_activitytype_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/feed_choice_activity"
                            android:textColor="#BFC7CC"
                            android:textSize="15dp" />

                        <FrameLayout
                            android:id="@+id/activity_type_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:visibility="gone">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:id="@+id/item_select_type_imageview"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:src="@android:color/black" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/activity_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="10dp"
                                android:text="打麻将"
                                android:textColor="#ffffff"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </FrameLayout>

                    </FrameLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow_right" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="25dp"
                    android:background="@color/line_color" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/release_select_activitytime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/release_activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/c2_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/feed_activity_time"
                        android:textColor="#2BADFF"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/release_select_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/release_activity_time"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/feed_choice_time"
                    android:textColor="#BFC7CC"
                    android:textSize="15dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/release_select_time"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/arrow_right"

                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/c2_location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/feed_activity_address"
                        android:textColor="#2BADFF"
                        android:textSize="13dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/release_input_activitylocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/release_activity_time"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:hint="@string/feed_input_address"
                    android:textColorHint="#BFC7CC"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/release_select_time"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line_color" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/c2_chat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/feed_talk"
                        android:textColor="#2BADFF"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/feed_optional"
                        android:textColor="#BFC7CC"
                        android:textSize="13dp" />


                </LinearLayout>

                <EditText
                    android:id="@+id/release_input_activitydes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/release_activity_time"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/feed_invite_join"
                    android:lines="4"
                    android:textColorHint="#BFC7CC"
                    android:textSize="15dp" />


            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:id="@+id/iv_gem"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="180dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>



</LinearLayout>