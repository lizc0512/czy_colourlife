<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <TextView
            android:id="@+id/community_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="深圳花郡"
            android:textColor="@color/black_text_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/build_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/community_tv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="2号楼 1单元"
            android:textColor="@color/black_text_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/build_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_tv"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/build_tv"
            android:text=""
            android:textColor="@color/black_text_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/build_tv"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:text="广东省深圳市宝安区"
            android:textColor="@color/color_a3aaae"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/sel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:padding="5dp"
            android:src="@drawable/f3_sel_circle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>
</LinearLayout>