<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <com.smileback.bankcommunicationsstyle.BCSIJMInputEditText
        android:id="@+id/ed_old_pawd"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:hint="@string/user_input_oldpawd"
        android:inputType="textPassword"
        android:maxLength="18"
        android:maxLines="1"
        android:paddingRight="10dp"
        android:textColor="@color/black_text_color"
        android:textColorHint="@color/color_a3aaae"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />

    <com.smileback.bankcommunicationsstyle.BCSIJMInputEditText
        android:id="@+id/ed_new_pawd"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:hint="@string/user_input_newpawd"
        android:inputType="textPassword"
        android:maxLength="18"
        android:maxLines="1"
        android:paddingRight="10dp"
        android:textColor="@color/black_text_color"
        android:textColorHint="@color/color_a3aaae"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rect_round_gray"
        android:text="@string/user_define"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>