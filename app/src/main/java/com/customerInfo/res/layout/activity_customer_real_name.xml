<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <LinearLayout
        android:id="@+id/ll_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_can_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="96dp"
                android:layout_marginLeft="96dp"
                android:text="录入信息"
                android:textColor="@color/blue_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_can_chage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="108dp"
                android:layout_marginLeft="108dp"
                android:text="录入人脸"
                android:textColor="@color/black_text_color"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_can_cge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="姓        名"
                android:textColor="@color/black_text_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_changeum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="4dp"
                android:inputType="number"
                android:text="何国对"
                android:textColor="@color/black_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_most"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓名有误"
                android:textColor="@color/color_f28146"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="身份证号"
                android:textColor="@color/black_text_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_chang_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="4dp"
                android:inputType="number"
                android:text="450123199308165436"
                android:textColor="@color/black_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_mot"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="信息不正确，请重新输入"
                android:textColor="@color/color_f28146"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:background="@drawable/text_change_deep"
            android:gravity="center"
            android:padding="16dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>