<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/top_room_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:singleLine="true" />


        <Chronometer
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:format="%s"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_audio_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_audio_opendoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:drawableTop="@mipmap/audio_open_door"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="开门" />


        <LinearLayout
            android:id="@+id/audio_wait_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wait_handup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:drawableTop="@mipmap/audio_hang_up"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="挂断" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_wait_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:drawableTop="@mipmap/audio_answer"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="接听" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/audio_answer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_answer_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:drawableTop="@mipmap/audio_no_mute"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="静音" />

            <TextView
                android:id="@+id/tv_answer_handfree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:drawableTop="@mipmap/audio_hands_free"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="免提" />

            <TextView
                android:id="@+id/tv_answer_handup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/audio_hang_up"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="挂断" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
