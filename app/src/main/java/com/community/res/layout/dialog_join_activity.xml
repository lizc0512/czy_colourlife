<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:background="@drawable/community_activity_share_bg">

        <TextView
            android:id="@+id/tv_join_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/community_share_notice"
            android:textColor="@color/color_a9afb8"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/join_operate_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_join"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_ebebeb"
                android:gravity="center"
                android:text="@string/message_cancel"
                android:textColor="@color/color_25282e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_define_join"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_3282fa"
                android:gravity="center"
                android:text="@string/message_define"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/join_activity_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/join_operate_layout"
            android:layout_below="@id/tv_join_notice"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:columnCount="3"
            android:horizontalSpacing="12dp"
            android:listSelector="#00000000"
            android:orientation="horizontal"
            android:verticalSpacing="12dp">

        </GridLayout>


    </RelativeLayout>

</LinearLayout>