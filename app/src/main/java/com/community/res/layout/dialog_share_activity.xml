<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="@drawable/community_activity_share_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/community_title_share"
            android:textColor="@color/color_25282e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_share_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/community_share_wechat"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:drawableTop="@drawable/community_share_friend"
            android:textColor="@color/color_25282e"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="75dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_share_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/community_share_circle"
            android:padding="5dp"
            android:drawablePadding="3dp"
            android:layout_alignParentRight="true"
            android:drawableTop="@drawable/community_share_circle"
            android:textColor="@color/color_25282e"
            android:layout_marginTop="50dp"
            android:layout_marginRight="75dp"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_cancel_share"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="48dp"
            android:background="@color/color_ebebeb"
            android:gravity="center"
            android:text="@string/message_cancel"
            android:textColor="@color/color_25282e"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>