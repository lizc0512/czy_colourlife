<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_view" />


    <LinearLayout
        android:id="@+id/bottom_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/send_message_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/community_activity_message"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/community_send_message"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_join_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/color_3282fa"
            android:gravity="center"
            android:text="@string/community_activity_join"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/rv_message"
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_activity_layout" />

    <LinearLayout
        android:id="@+id/no_data_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/community_comment_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/community_no_message"
            android:textColor="@color/color_a9afb8"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
