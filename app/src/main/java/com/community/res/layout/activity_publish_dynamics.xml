<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_view" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_fafafa" />

            <EditText
                android:id="@+id/create_dynamics_content"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/community_hint_notice"
                android:maxLength="1000"
                android:padding="16dp"
                android:textColor="@color/color_25282e"
                android:textColorHint="@color/color_cccccc"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_fafafa" />


            <GridLayout
                android:id="@+id/create_dynamics_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:horizontalSpacing="10dp"
                android:listSelector="#00000000"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:verticalSpacing="10dp">

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/community_upload_most"
                android:textColor="@color/color_a9afb8"
                android:textSize="13sp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>