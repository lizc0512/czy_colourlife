<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:id="@+id/rl_notice_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/iv_item_notice_logo_three"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tv_item_notice_name_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="21dp"
                android:textColor="@color/black_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_item_notice_date_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_item_notice_name_three"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_item_notice_name_three"
                android:textColor="@color/c999faa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_notice_content_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_item_notice_name_three"
                android:layout_below="@id/tv_item_notice_name_three"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_notice_describe_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_item_notice_name_three"
                android:layout_below="@id/tv_item_notice_content_three"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/c999faa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_notice_explain_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_item_notice_name_three"
                android:layout_below="@id/tv_item_notice_describe_three"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/c999faa"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_notice_details_three"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/rl_notice_three">

            <View
                android:id="@+id/view_notice_one_three"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dee3e5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/notification_see_more"
                android:textColor="@color/black_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/list_icon_more" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
