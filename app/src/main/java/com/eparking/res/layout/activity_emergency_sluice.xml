<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_view" />
    <!--预约停车-->

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/bg_color" />

    <LinearLayout
        android:id="@+id/car_model_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/car_brand"
            android:textColor="@color/color_333b46"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:gravity="right"
            android:textColorHint="@color/color_bbc0cb"
            android:hint="@string/choice_cars"
            android:textColor="@color/color_626b77"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_car_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <View style="@style/dividerlineStyle" />

    <LinearLayout
        android:id="@+id/car_parking_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/eparking_name"
            android:textColor="@color/color_333b46"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_parking_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:hint="@string/choice_parking"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="@color/color_626b77"
            android:textColorHint="@color/color_bbc0cb"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_address_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <View style="@style/dividerlineStyle" />


    <Button
        android:id="@+id/btn_once_apply"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_openticket_default"
        android:text="@string/once_apply"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>