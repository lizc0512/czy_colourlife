<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/bg_color">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/pop_cancel"
                android:textColor="@color/color_999faa"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_define"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/pop_define"
                android:textColor="@color/color_007fff"
                android:textSize="18sp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="460dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_all_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/pop_choice_filter"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_history_filterdefault"
                    android:text="@string/pop_all"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/eparking_name"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <com.BeeFramework.view.NoScrollGridView
                    android:id="@+id/gv_parking_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:horizontalSpacing="8dp"
                    android:numColumns="2"
                    android:verticalSpacing="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/pop_car"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <com.BeeFramework.view.NoScrollGridView
                    android:id="@+id/gv_car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:horizontalSpacing="8dp"
                    android:numColumns="2"
                    android:verticalSpacing="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/eparking_type"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <com.BeeFramework.view.NoScrollGridView
                    android:id="@+id/gv_parking_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:horizontalSpacing="8dp"
                    android:numColumns="2"
                    android:verticalSpacing="16dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>