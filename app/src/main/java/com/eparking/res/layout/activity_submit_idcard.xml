<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_view" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bg_color"
                android:drawableLeft="@drawable/eparking_img_notice"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/idcard_notice"
                android:textColor="@color/color_626b77"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/idcard_number"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_idcard_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/idcard_required_write"
                    android:inputType="text"
                    android:maxLength="18"
                    android:textColor="@color/color_626b77"
                    android:textColorHint="@color/color_bbc0cb"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/applylineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/idcard_name"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_idcard_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/idcard_required_write"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColor="@color/color_626b77"
                    android:textColorHint="@color/color_bbc0cb"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/applylineStyle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/idcard_sex"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_idcard_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/idcard_optional_write"
                    android:inputType="text"
                    android:maxLength="2"
                    android:textColor="@color/color_626b77"
                    android:textColorHint="@color/color_bbc0cb"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/applylineStyle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/idcard_nation"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_idcard_nation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/idcard_optional_write"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColor="@color/color_626b77"
                    android:textColorHint="@color/color_bbc0cb"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/applylineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/idcard_born_date"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_born_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/idcard_optional_write"
                    android:inputType="text"
                    android:textColor="@color/color_626b77"
                    android:textColorHint="@color/color_bbc0cb"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/applylineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:minHeight="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/car_owner_address"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <com.BeeFramework.view.ClearEditText
                    android:id="@+id/ed_idcard_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/idcard_optional_write"
                    android:inputType="text"
                    android:lineSpacingExtra="3dp"
                    android:maxLength="50"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_626b77"
                    android:textColorHint="@color/color_bbc0cb"
                    android:textSize="14sp" />

            </LinearLayout>

            <View style="@style/applylineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/idcard_effective_date"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_effective_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/idcard_optional_write"
                    android:inputType="text"
                    android:textColor="@color/color_626b77"
                    android:textColorHint="@color/color_bbc0cb"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/applylineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/idcard_expiry_date"
                    android:textColor="@color/color_333b46"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_expiry_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/idcard_optional_write"
                    android:inputType="text"
                    android:textColor="@color/color_626b77"
                    android:textColorHint="@color/color_bbc0cb"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/applylineStyle" />


            <Button
                android:id="@+id/btn_check_next"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_openticket_default"
                android:text="@string/check_next"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>