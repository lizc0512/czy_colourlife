<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_itme"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@drawable/hxb_list_item_selector">

    <RelativeLayout
        android:id="@+id/icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:padding="5dp">

        <com.youmai.hxsdk.view.group.TeamHeadView
            android:id="@+id/message_icon"
            android:layout_width="@dimen/card_head"
            android:layout_height="@dimen/card_head"
            android:src="@drawable/im_icon_community_group" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/message_time"
        android:layout_toRightOf="@+id/icon_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxEms="10"
                android:maxLines="1"
                android:text="111111"
                android:textColor="@color/hxb_text_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_groupType"
                android:layout_width="36dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/im_icon_group_message_type"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_msg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/im_icon_chatlist_fail"
                android:visibility="gone" />

            <TextView
                android:id="@+id/message_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1111111"
                android:textColor="@color/hxb_subtitle_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/hxb_subtitle_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/message_call_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/im_icon_no_notify" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/hxb_line_color" />

</RelativeLayout>
