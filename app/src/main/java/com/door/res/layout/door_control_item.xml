<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    tools:context="com.door.activity.DoorApplyActivity">


    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/txt_open"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_community_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/top_bg_color"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/txt_num"

            android:padding="5dp"
            android:text=""/>
        <TextView
            android:id="@+id/txt_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_community_name"
            android:textColor="#898888"
            android:layout_toRightOf="@+id/txt_num"
            android:textSize="16sp"
            android:padding="5dp"
            android:text=""/>
        <TextView
            android:id="@+id/txt_num"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="52sp"
            android:layout_alignBottom="@+id/txt_open_time"
            android:background="@drawable/btn_roundness_share"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击开门"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/blue"/>
</RelativeLayout>