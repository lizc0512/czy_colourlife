<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_homedoor_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="140dp"
    android:background="@drawable/homedoor_color_selector">

    <ImageView
        android:id="@+id/iv_homedoor_item_logo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/open_icon_door" />

    <TextView
        android:id="@+id/tv_homedoor_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_homedoor_item_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="A4栋门"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/color_333b46"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/tv_homedoor_item_name" />
</RelativeLayout>