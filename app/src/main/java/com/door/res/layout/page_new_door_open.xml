<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <TextView
        android:id="@+id/tv_homedoor_communityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="富美兴"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_333b46"
        android:textSize="16dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/page_homedoor_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_homedoor_communityname">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/ll_homedoor"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/page_homedoor_recyclerview">
    </LinearLayout>
</RelativeLayout>