<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="真实姓名"
            android:textColor="@color/color_8d9299"
            android:textSize="15sp" />

        <com.BeeFramework.view.ClearEditText
            android:id="@+id/ed_real_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="130dp"
            android:paddingRight="10dp"
            android:background="@null"
            android:hint="请填写您的真实姓名"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/color_25282e"
            android:textColorHint="@color/color_8d9299"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:background="@color/divider_color" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/apply_room_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="房间号"
            android:textColor="@color/color_8d9299"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_apply_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:singleLine="true"
            android:textColor="@color/color_25282e"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:background="@color/divider_color" />

        <ImageView
            android:id="@+id/iv_apply_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/arrow_right"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="身份"
            android:textColor="@color/color_8d9299"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_apply_identify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:singleLine="true"
            android:textColor="@color/color_25282e"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:background="@color/divider_color" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_register_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="登记手机号"
            android:textColor="@color/color_8d9299"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_register_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:singleLine="true"
            android:textColor="@color/color_25282e"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:background="@color/divider_color" />

    </RelativeLayout>


    <RelativeLayout
     android:id="@+id/layout_validate_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="验证手机号"
            android:textColor="@color/color_8d9299"
            android:textSize="15sp" />

        <com.BeeFramework.view.ClearEditText
            android:id="@+id/ed_validate_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="130dp"
            android:background="@null"
            android:hint="请输入业主完整手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/color_25282e"
            android:textColorHint="@color/color_8d9299"
            android:textSize="15sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:background="@color/divider_color" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_authorize_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="授权人手机号"
            android:textColor="@color/color_8d9299"
            android:textSize="15sp" />

        <com.BeeFramework.view.ClearEditText
            android:id="@+id/ed_authorize_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="130dp"
            android:paddingRight="10dp"
            android:inputType="number"
            android:maxLength="11"
            android:background="@null"
            android:hint="选填，若申请远程开门需填写"
            android:singleLine="true"
            android:textColor="@color/color_25282e"
            android:textColorHint="@color/color_8d9299"
            android:textSize="15sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:background="@color/divider_color" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_apply_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:textSize="11sp"
        android:layout_marginRight="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <Button
        android:id="@+id/btn_submit_infor"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:enabled="false"
        android:background="@drawable/onekey_login_default_bg"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>