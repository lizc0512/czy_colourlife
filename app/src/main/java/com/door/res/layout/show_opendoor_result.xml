<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_opendoor"
        android:layout_width="270dp"
        android:layout_height="371dp"
        android:paddingTop="10dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_opendoor_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/home_open_popup_bg"/>
        <ImageView
            android:id="@+id/iv_opendoor_close_ok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="80dp"
            android:padding="7dp"
            android:src="@drawable/open_icon_close" />

        <TextView
            android:id="@+id/tv_opendoor_money_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:text="0.00"
            android:textColor="@color/color_333b46"
            android:textSize="28dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_opendoor_fp_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="177dp"
            android:layout_toLeftOf="@id/tv_opendoor_money_ok"
            android:src="@drawable/door_icon_fanpiao"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_opendoor_message_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_opendoor_money_ok"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/c999faa"
            android:textSize="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_opendoor_cqb_ok"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv_opendoor_message_ok"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/tv_open_door"
            android:gravity="center"
            android:textColor="@color/color_269fff"
            android:textSize="14dp"
            android:visibility="gone" />


        <com.tmall.ultraviewpager.UltraViewPager
            android:id="@+id/ad_opendoor_banner"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="180dp"
            android:background="@color/white"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>