<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    tools:context="com.door.activity.DoorApplyActivity">

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="张三"
        android:textColor="@color/top_bg_color"
        android:textSize="16sp" />
    <View
        android:id="@+id/v_1"
        android:layout_width="1dp"
        android:background="@color/divider_color"
        android:layout_alignTop="@+id/txt_mobile"
        android:layout_alignBottom="@+id/txt_mobile"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/txt_mobile"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/v_1"
        android:layout_alignBaseline="@+id/txt_mobile"
        android:padding="5dp"
        android:textColor="@color/lightgred_color"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt_mobile"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="@string/door_apply_community"
        android:textColor="@color/edit_text_color"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/tv_name"
        android:padding="5dp"
        android:textColor="@color/edit_text_color"
        android:textSize="16sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_name"
        android:padding="5dp"
        android:text="@string/door_apply_times"
        android:textColor="@color/edit_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_time"
        android:layout_toRightOf="@+id/txt_time"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="" />
</RelativeLayout>