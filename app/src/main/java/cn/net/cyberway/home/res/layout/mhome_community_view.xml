<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/community_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_manager_border"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/iv_activity_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_style_four" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/community_sign" />

            <TextView
                android:id="@+id/iv_activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:text="官方\n活动"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/title_activity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_activity_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费"
                android:textColor="@color/color_ff6d50"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:text="最美宠物摄影图片活动"
                android:textColor="@color/color_000000"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_activity_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_activity_layout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="地址：七星小区"
            android:textColor="@color/color_000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_activity_address"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="活动截止：2020年4月12日"
            android:textColor="@color/color_000000"
            android:textSize="12sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/tv_once_join"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/commuity_activity_join"
                android:text="@string/community_activity_join"
                android:textColor="@color/color_ff6d50"
                android:textSize="13sp" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginLeft="16dp"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content">

                  <com.BeeFramework.view.CircleImageView
                      android:id="@+id/iv_first_photo"
                      android:layout_gravity="center_vertical"
                      android:layout_width="18dp"
                      tools:src="@drawable/icon_default"
                      android:layout_height="18dp"/>
                  <com.BeeFramework.view.CircleImageView
                      android:id="@+id/iv_second_photo"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="-9dp"
                      tools:src="@drawable/icon_default"
                      android:layout_width="18dp"
                      android:layout_height="18dp"/>
                  <com.BeeFramework.view.CircleImageView
                      android:id="@+id/iv_thrid_photo"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="-9dp"
                      tools:src="@drawable/icon_default"
                      android:layout_marginRight="8dp"
                      android:layout_width="18dp"
                      android:layout_height="18dp"/>
                  <TextView
                      android:id="@+id/tv_join_person"
                      android:layout_width="wrap_content"
                      tools:text="123个邻居参与"
                      android:layout_gravity="center_vertical"
                      android:textSize="11sp"
                      android:textColor="@color/color_666666"
                      android:layout_height="wrap_content"/>

              </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>