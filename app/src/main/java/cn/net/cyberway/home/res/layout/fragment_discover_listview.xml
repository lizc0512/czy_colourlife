<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_hui_radius"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/iv_life_serach"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_home_search" />

            <EditText
                android:id="@+id/et_life_serach"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/iv_life_serach"
                android:background="@color/bg_color"
                android:hint="@string/home_input_servicename"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/color_333b46"
                android:textColorHint="@color/color_a3aaae"
                android:textSize="13dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line_life"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_top" />

    <com.external.maxwin.view.XListView
        android:id="@+id/life_home_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line_life"
        android:descendantFocusability="afterDescendants"
        android:divider="@null"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <ImageView
        android:id="@+id/iv_gem"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="180dp"
        android:layout_marginRight="10dp"
        android:visibility="gone" />
</RelativeLayout>
